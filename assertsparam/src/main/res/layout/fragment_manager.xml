<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="managerVm"
            type="com.owner.assertsparam.viewmodel.ManagerViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/MatchMatch.Vertical">

        <com.owner.baselibrary.widgets.HeaderBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="管理人员" />

        <LinearLayout
            android:id="@+id/mSearchll"
            style="@style/MatchWrap"
            android:layout_below="@+id/line1">

            <RelativeLayout
                style="@style/MatchWrap"
                android:layout_margin="@dimen/common_margin_middle"
                android:background="@drawable/corners_tag_white"
                android:padding="@dimen/common_margin_small">

                <com.owner.baselibrary.widgets.ClearEditText
                    android:id="@+id/filter_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="搜索联系人"
                    android:singleLine="true"
                    android:textSize="15.0dip" />

                <Button
                    android:id="@+id/btnSearch"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_margin_middle"
                    android:background="@mipmap/search"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout style="@style/MatchMatch">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/country_lvcountry"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/title_layout_no_friends"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="right|top"
                android:background="#E0E0E0"
                android:gravity="center_vertical"
                android:text="没有匹配的联系人"
                android:textColor="#454545"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="right|top"
                android:background="#ff303030"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_layout_catalog"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#E0E0E0"
                    android:paddingLeft="5dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:textColor="#454545" />
            </LinearLayout>

            <TextView
                android:id="@+id/dialog"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:background="#557D7D7D"
                android:gravity="center"
                android:padding="20dp"
                android:textColor="#ffffffff"
                android:textSize="30.0dip"
                android:visibility="invisible" />

            <com.owner.assertsparam.widgets.CharIndexBar.CharIndexBar
                android:id="@+id/mCharBar"
                android:layout_width="30.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center" />
        </FrameLayout>

    </LinearLayout>
</layout>