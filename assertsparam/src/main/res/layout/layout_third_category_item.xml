<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.owner.assertsparam.data.CategoryInfo" />

        <variable
            name="categoryFgVM"
            type="com.owner.assertsparam.viewmodel.CategoryFgViewModel" />

    </data>

    <FrameLayout style="@style/WrapWrap">

        <LinearLayout
            android:id="@+id/mThirdCgll"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin"
            android:background="@drawable/third_category_bg_selector"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/mThirdCategoryIv"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:onClick="@{()->categoryFgVM.itemOnClick(data)}"
                    android:onLongClick="@{()->categoryFgVM.itemLongClick(data)}"
                    android:scaleType="fitXY"
                    app:imageUrl="@{data.imageUrl}"
                    app:placeholder="@{@drawable/no_picture}"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/mThirdCategoryNameTv"
                style="@style/WrapWrap"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_margin_middle"
                android:text="@{data.name}"
                android:textSize="@dimen/text_small_size"
                android:textColor="@drawable/top_category_text_selector"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mEditThirdCgll"
            android:layout_width="71dp"
            android:layout_height="100dp"
            android:alpha="100"
            android:orientation="vertical">

            <Button
                android:id="@+id/mUpdateThirdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="修改"
                android:onClick="@{()->categoryFgVM.updateThirdAlert(data)}"/>

            <Button
                android:id="@+id/mDeleteThirdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="删除"
                android:onClick="@{()->categoryFgVM.deleteAlert(data)}"/>

        </LinearLayout>


    </FrameLayout>

</layout>