<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                                          
                 
                       
                                                             
                 
                           
                                                                             
           

    <FrameLayout style="@style/WrapWrap" android:tag="layout/layout_four_category_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/mFourCgll"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/common_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/mFourCategoryIv"
                    android:layout_width="91dp"
                    android:layout_height="91dp"
                    android:scaleType="fitXY"
                    android:tag="binding_1"                            
                                                                             
                                                   
                                                             />
            </RelativeLayout>

            <TextView
                android:id="@+id/mFourCategoryNameTv"
                style="@style/WrapWrap"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_margin_middle"
                android:tag="binding_2"    
                                                                   
                android:textSize="@dimen/text_small_size" />
        </LinearLayout>

        <CheckBox
            style="@style/WrapWrap"
            android:layout_gravity="end|top"
            android:background="@color/common_white"
            android:tag="binding_3"                                       
                                                                    
                                              />

        <LinearLayout
            android:id="@+id/mEditFourCgll"
            android:layout_width="71dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:alpha="100"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/mUpdateFourTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="修改"
                android:tag="binding_4"                             />

            <Button
                android:id="@+id/mDeleteFourTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="删除"
                android:tag="binding_5"                             />

        </LinearLayout>

    </FrameLayout>

         