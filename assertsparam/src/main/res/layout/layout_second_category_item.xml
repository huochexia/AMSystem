<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="category"
            type="com.owner.assertsparam.data.CategoryInfo"/>
        <variable
            name="categoryVM"
            type="com.owner.assertsparam.viewmodel.CategoryFgViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/MatchWrap.Vertical"
            android:layout_marginBottom="@dimen/common_margin">

            <TextView
                android:id="@+id/mSecondCategoryNameTv"
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/common_margin_middle"
                android:layout_marginBottom="@dimen/common_margin_middle"
                android:text="@{category.name}"
                android:textColor="@color/common_black"
                android:textSize="@dimen/text_small_size"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mThirdCategoryRv"
                style="@style/commonRecyclerView" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>
