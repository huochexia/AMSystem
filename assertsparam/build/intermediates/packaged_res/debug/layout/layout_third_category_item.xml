<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                                          
                 
                       
                                                              

                 
                               
                                                                          

           

    <FrameLayout style="@style/WrapWrap" android:tag="layout/layout_third_category_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/mThirdCgll"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/mThirdCategoryIv"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:tag="binding_1"                                   
                                                                                 
                    android:scaleType="fitXY"
                                                   
                                                             />
            </RelativeLayout>

            <TextView
                android:id="@+id/mThirdCategoryNameTv"
                style="@style/WrapWrap"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_margin_middle"
                android:tag="binding_2"    
                                                                          
                android:textSize="@dimen/text_small_size" />
        </LinearLayout>
        <CheckBox
            style="@style/WrapWrap"
            android:layout_gravity="end|top"
            android:background="@color/common_white"
            android:tag="binding_3"                                                             
                                                                        
                                              />
        <LinearLayout
            android:id="@+id/mEditThirdCgll"
            android:layout_width="71dp"
            android:layout_height="100dp"
            android:alpha="100"
            android:orientation="vertical">

            <Button
                android:id="@+id/mUpdateThirdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="修改"
                android:tag="binding_4"                                     />

            <Button
                android:id="@+id/mDeleteThirdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="删除"
                android:tag="binding_5"                                />

        </LinearLayout>


    </FrameLayout>

         