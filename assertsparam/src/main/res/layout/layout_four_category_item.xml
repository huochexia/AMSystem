<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="four"
            type="com.owner.assertsparam.data.CategoryInfo"/>
        <variable
            name="fourth"
            type="com.owner.assertsparam.viewmodel.FourthCategoryViewModel"/>
    </data>
    <FrameLayout style="@style/WrapWrap">

        <LinearLayout
            android:id="@+id/mFourCgll"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/mFourCategoryIv"
                    android:layout_width="91dp"
                    android:layout_height="91dp"

                    android:scaleType="fitXY" />
            </RelativeLayout>

            <TextView
                android:id="@+id/mFourCategoryNameTv"
                style="@style/WrapWrap"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_margin_middle"

                android:textSize="@dimen/text_small_size" />
        </LinearLayout>

        <CheckBox
            style="@style/WrapWrap"
            android:layout_gravity="end|top"
            android:background="@color/common_white" />

        <LinearLayout
            android:id="@+id/mEditFourCgll"
            android:layout_width="71dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:alpha="100"
            android:orientation="vertical">

            <Button
                android:id="@+id/mUpdateFourTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="修改" />

            <Button
                android:id="@+id/mDeleteFourTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="删除" />

        </LinearLayout>


    </FrameLayout>

</layout>